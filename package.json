{
	"name": "auri",
	"version": "0.1.0",
	"description": "Organize package changes and releases",
	"main": "index.js",
	"types": "index.d.ts",
	"module": "index.js",
	"type": "module",
	"files": [
		"**/*"
	],
	"bin": {
		"auri": "./index.js"
	},
	"scripts": {
		"build": "shx rm -rf ./dist/* && tsc && shx cp ./package.json ./dist && shx cp ./README.md ./dist",
		"auri.publish": "pnpm build && cd dist && pnpm install --no-frozen-lockfile && pnpm publish --no-git-checks --access public && cd ../",
		"auri": "node ./dist/index.js",
		"format": "pnpm exec prettier -w ."
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/pilcrowOnPaper/auri",
		"directory": "/"
	},
	"author": "pilcrowOnPaper",
	"license": "MIT",
	"exports": {
		"./package.json": "./package.json",
		".": "./index.js"
	},
	"typesVersions": {
		"*": {}
	},
	"devDependencies": {
		"@types/node": "^18.14.4",
		"prettier": "^2.8.3",
		"shx": "^0.3.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"front-matter": "^4.0.2",
		"nanoid": "^4.0.1"
	}
}
