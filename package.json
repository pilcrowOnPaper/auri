{
	"name": "cela",
	"version": "0.0.1",
	"description": "Organize package changes and releases",
	"main": "index.js",
	"types": "index.d.ts",
	"module": "index.js",
	"type": "module",
	"files": [
		"**/*"
	],
	"bin": {
		"cela": "./dist/index.js"
	},
	"scripts": {
		"build": "shx rm -rf ./dist/* && tsc && shx cp ./package.json ./dist && shx cp ./README.md ./dist",
		"release": "pnpm build && cd dist && pnpm install --no-frozen-lockfile && pnpm publish --no-git-checks --access public && cd ../"
	},
	"keywords": [],
	"repository": {
		"type": "git",
		"url": "https://github.com/lucia-auth/cela",
		"directory": "/"
	},
	"author": "lucia",
	"license": "MIT",
	"exports": {
		".": "./index.js"
	},
	"typesVersions": {
		"*": {}
	},
	"devDependencies": {
		"@types/node": "^18.14.4",
		"prettier": "^2.8.3",
		"shx": "^0.3.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"cela": "workspace:*"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"front-matter": "^4.0.2",
		"nanoid": "^4.0.1"
	}
}
